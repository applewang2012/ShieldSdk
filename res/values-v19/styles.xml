<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 文字 -->
    <style name="bigText">
        <item name="android:textSize">@dimen/BiggerTextSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="middleText">
        <item name="android:textSize">@dimen/MiddleTextSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="smallText">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="bigTextwhite" parent="bigText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="middleTextwhite" parent="middleText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="normalTextwhite" parent="normalText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="smallTexttwhite" parent="smallText">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
